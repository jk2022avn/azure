{
  "Observability": {
    "Logging": {
      "Structured": true
    },
    "Metrics": {
      "Enabled": false
    }
  },
  "Serilog": {
    "MinimumLevel": "Verbose",
    "Enrich": [ "WithMachineName" ],
    "Using": [ "Serilog.Sinks.AzureTableStorage" ],
    "WriteTo": [
      {
        "Name": "AzureTableStorage",
        "Args": {
          "storageTableName": "FulfilmentLogs",
          "connectionString": "<sa-connection-string>"
        }
      }
    ]
  }
}